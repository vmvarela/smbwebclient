# ===========================================
# SMB Web Client - Configuration
# ===========================================

# -------------------------------------------
# SMB Server Settings
# -------------------------------------------

# Default SMB server to connect to
SMB_DEFAULT_SERVER=localhost

# Comma-separated list of allowed servers (optional)
# Example: SMB_SERVER_LIST=server1,server2,192.168.1.100
SMB_SERVER_LIST=

# Root path to restrict navigation (optional)
# Example: /myserver/myshare or just /myshare
SMB_ROOT_PATH=

# Hide files and folders starting with a dot
SMB_HIDE_DOT_FILES=true

# Hide Windows system shares (C$, ADMIN$, IPC$, etc.)
SMB_HIDE_SYSTEM_SHARES=true

# Hide printer shares
SMB_HIDE_PRINTER_SHARES=false

# -------------------------------------------
# Application Settings
# -------------------------------------------

# Default language (en, es, fr, de, etc.)
# Supports 40+ languages with browser auto-detection
APP_DEFAULT_LANGUAGE=en

# Character encoding
APP_DEFAULT_CHARSET=UTF-8

# Path for temporary files (ZIP downloads)
# Leave empty to use system temp directory
APP_CACHE_PATH=

# Session cookie name
APP_SESSION_NAME=SMBWebClientID

# Allow anonymous access without login
APP_ALLOW_ANONYMOUS=false

# Enable clean URLs (requires web server rewrite rules)
APP_MOD_REWRITE=false

# Base URL for clean URLs (only if APP_MOD_REWRITE=true)
APP_BASE_URL=

# -------------------------------------------
# Logging
# -------------------------------------------

# Log verbosity level (0=off, 1=errors, 2=warnings, 3=debug)
LOG_LEVEL=0

# Syslog facility
LOG_FACILITY=LOG_DAEMON
