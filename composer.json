{
    "name": "vmvarela/smbwebclient",
    "description": "Modern PHP 8 SMB/CIFS web client using icewind/smb library",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Victor M. Varela",
            "email": "vmvarela@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "icewind/smb": "^3.7",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "SmbWebClient\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
